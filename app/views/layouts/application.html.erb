<%

  before_body_end = content_for(:before_body_end) || nil
  header_hide = content_for(:header_hide) || false
  footer_hide = content_for(:footer_hide) || false

%><!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= site_name %></title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, shrink-to-fit=no">

    <%# place fonts in `/public/fonts`, preload them here: %>
    <%# <link rel="preload" href="/fonts/name.woff2" as="font" type="font/woff2" crossorigin> %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', :media => :all %>
    <%= javascript_pack_tag 'application', :defer => true %>
  </head>

  <body>
    <%= render 'shared/header' unless header_hide %>

    <%= render 'shared/flash' if notice.present? || alert.present? %>

    <main>
      <%= yield %>
    </main>

    <%= render 'shared/footer' unless footer_hide %>

    <%= before_body_end if before_body_end %>
  </body>
</html>
